<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main">

	<RelativeLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/roundedborder_black_translucent"
		android:layout_centerInParent="true">

		<!-- HEADER -->
		<include android:id="@+id/header" layout="@layout/header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>	
	
		<RelativeLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/view1"
			android:layout_below="@id/header"
			android:layout_centerHorizontal="true">
		    
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/choose"
				android:textColor="#00ff00"
				android:layout_centerHorizontal="true"
				android:gravity="center"
				android:layout_margin="10dp"/>

		    <Spinner
				android:id="@+id/appletcheck"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/choose"
				android:layout_margin="5dp"/>
					    
			<RelativeLayout 
			    android:id="@+id/options"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/appletcheck">
			
				<Spinner
					android:id="@+id/busyboxversiontobe"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<CheckBox
					android:id="@+id/customtune"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/customTune"
					android:layout_toRightOf="@+id/busyboxversiontobe"/>
				
			</RelativeLayout>													
						
			<RelativeLayout 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/options"
				android:layout_centerHorizontal="true">

				<Button
					android:id="@+id/install"
					android:layout_width="100dp"
					android:layout_height="75dp"
					android:text="@string/install"
					android:textColor="#ffffff"
					android:onClick="proceed"
					android:background="@drawable/button"
					/>

				<Button
					android:id="@+id/uninstall"
					android:layout_width="100dp"
					android:layout_height="75dp"
					android:text="@string/uninstall"
					android:layout_toRightOf="@id/install"
					android:onClick="uninstall"
					android:textColor="#ffffff"
					android:background="@drawable/button"
					/>

			</RelativeLayout>
		</RelativeLayout>
		
		<RelativeLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/pop"/>

	</RelativeLayout>
</LinearLayout>
